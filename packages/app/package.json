{
    "name": "@orion/app",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "build": "rollup --config rollup.config.js && yarn copy:resources",
        "build:css": "tailwindcss -i src/styles/styles.css -o src/assets/styles/tailwind.css",
        "clean": "rm -rf dist",
        "copy:resources": "cp src/index.html src/assets/styles/*.css dist",
        "format": "prettier *.json *.js src/**/*.{js,html} --write",
        "lint": "eslint '**/*.js' --max-warnings 0",
        "dev": "node src/server.js"
    },
    "devDependencies": {
        "@babel/core": "7.24.0",
        "@babel/eslint-parser": "7.23.10",
        "@lwc/eslint-plugin-lwc": "1.7.2",
        "@lwc/rollup-plugin": "6.3.2",
        "@rollup/plugin-replace": "5.0.5",
        "lwc": "6.3.2",
        "pino-pretty": "10.3.1",
        "rollup": "4.13.0",
        "tailwindcss": "3.4.1"
    },
    "dependencies": {
        "@fastify/static": "^7.0.1",
        "fastify": "^4.26.2"
    }
}
